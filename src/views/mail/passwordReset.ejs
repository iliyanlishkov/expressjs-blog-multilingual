<table
	width="100%"
	height="100%"
	border="0"
	cellspacing="0"
	cellpadding="0"
	lang="en"
>
	<tbody>
		<tr height="32" style="height: 32px">
			<td></td>
		</tr>
		<tr align="center">
			<td>
				<div><div></div></div>
				<table
					border="0"
					cellspacing="0"
					cellpadding="0"
					style="
						padding-bottom: 20px;
						max-width: 516px;
					"
				>
					<tbody>
						<tr>
							<td width="8" style="width: 8px"></td>
							<td>
								<div
									style="
										border-style: solid;
										border-width: thin;
										border-color: #dadce0;
										border-radius: 8px;
										padding: 40px 20px;
									"
									align="center"
								>
									<img
										src="http://localhost:3000/img/email/random-logo-194x40.png"
										width="194"
										height="40"
										style="margin-bottom: 16px"
										alt="App"
									/>
									<div
										style="
											font-family: 'Google Sans', Roboto,
												RobotoDraft, Helvetica, Arial,
												sans-serif;
											border-bottom: thin solid #dadce0;
											color: rgba(0, 0, 0, 0.87);
											line-height: 32px;
											padding-bottom: 24px;
											text-align: center;
											word-break: break-word;
										"
									>
										<div style="font-size: 24px">
											<%= __(locale +
											'/emails/passwordReset.title') %>
										</div>
										<table
											align="center"
											style="margin-top: 8px"
										>
											<tbody>
												<tr style="line-height: normal">
													<td>
														<a
															style="
																font-family: 'Google Sans',
																	Roboto,
																	RobotoDraft,
																	Helvetica,
																	Arial,
																	sans-serif;
																color: rgba(
																	0,
																	0,
																	0,
																	0.87
																);
																font-size: 14px;
																line-height: 20px;
															"
															><%= email; %></a
														>
													</td>
												</tr>
											</tbody>
										</table>
									</div>
									<div
										style="
											font-family: Roboto-Regular,
												Helvetica, Arial, sans-serif;
											font-size: 14px;
											color: rgba(0, 0, 0, 0.87);
											line-height: 20px;
											padding-top: 20px;
											text-align: center;
										"
									>
										<%= __(locale +
										'/emails/passwordReset.body') %>
										<div
											style="
												padding-top: 32px;
												text-align: center;
											"
										>
											<a
												href="<%= passwordResetLink; %>"
												style="
													font-family: 'Google Sans',
														Roboto, RobotoDraft,
														Helvetica, Arial,
														sans-serif;
													line-height: 16px;
													color: #ffffff;
													font-weight: 400;
													text-decoration: none;
													font-size: 14px;
													display: inline-block;
													padding: 10px 24px;
													background-color: #4184f3;
													border-radius: 5px;
												"
												target="_blank"
												data-saferedirecturl="<%= passwordResetLink; %>"
												><%= __(locale +
												'/emails/passwordReset.linkText')
												%></a
											>
										</div>
									</div>
									<div
										style="
											padding-top: 20px;
											font-size: 12px;
											line-height: 16px;
											color: #5f6368;
											letter-spacing: 0.3px;
											text-align: center;
											word-break: break-word;
										"
									>
										<%= __(locale +
										'/emails/passwordReset.viewInBrowserText')
										%>
										<br /><a
											style="
												color: rgba(0, 0, 0, 0.87);
												text-decoration: inherit;
											"
											><%= passwordResetLink; %></a
										>
									</div>
								</div>
								<div style="text-align: left">
									<div
										style="
											font-family: Roboto-Regular,
												Helvetica, Arial, sans-serif;
											color: rgba(0, 0, 0, 0.54);
											font-size: 11px;
											line-height: 18px;
											padding-top: 12px;
											text-align: center;
										"
									>
										<div>
											<%= __(locale +
											'/emails/passwordReset.receivingReason')
											%>
										</div>
										<div style="direction: ltr">
											Â© 2022 <%= __(locale +
											'/emails/passwordReset.companyName')
											%>,
											<a
												style="
													font-family: Roboto-Regular,
														Helvetica, Arial,
														sans-serif;
													color: rgba(0, 0, 0, 0.54);
													font-size: 11px;
													line-height: 18px;
													padding-top: 12px;
													text-align: center;
												"
												><%= __(locale +
												'/emails/passwordReset.companyAddress')
												%></a
											>
										</div>
									</div>
								</div>
							</td>
							<td width="8" style="width: 8px"></td>
						</tr>
					</tbody>
				</table>
			</td>
		</tr>
		<tr height="32" style="height: 32px">
			<td></td>
		</tr>
	</tbody>
</table>
